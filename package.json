{
  "name": "billing-api",
  "version": "1.0.0",
  "description": "Billing api",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run lint && npm run tsc",
    "tsc": "npx tsc -p tsconfig.json",
    "start:dev": "npx tsc --watch & NODE_ENV=development nodemon dist",
    "start": "npm run build && node .",
    "test": "jest --collect-coverage --max-workers=1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "npx prettier --write . '!./containers'"
  },
  "keywords": [
    "billing"
  ],
  "author": "Carlos Coral",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "kill-port": "^2.0.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "log4js": "^6.9.1",
    "mongoose": "^7.0.5",
    "yup": "^1.1.1"
  }
}
